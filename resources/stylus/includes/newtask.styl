.newtask
    position absolute

    top 0
    bottom 0
    left 0
    right 0


    &__overlay
        position fixed
        z-index 1

        top 0
        bottom 0
        left 0
        right 0

        background rgba(0, 0, 0, 0.3)


    &__container
        position relative
        z-index 2

        max-width 820px
        margin 5% auto

        background: $colors.white
        box-shadow 0 0 10px 1px rgba(102, 102, 102, 0.8)


    &__head
        padding 20px
        color: $gray.dark
        background-color: $gray.white

        &-header
            font-weight 300
            font-size 22px
            text-align center

            margin 0
            padding 0


        &-project
            color: $colors.black


    &__main
        padding 30px 20px


    &__form
        &-item
            display block
            padding 5px 0


        &-input
            width 30%
            height 30px
            padding 5px
            border-radius 3px
            border: 1px solid $gray.middle

            font-size 13px
            outline none


        &-textarea
            width 100%
            height 100px
            border-radius 3px
            border: 1px solid $gray.middle
            padding 5px

            font-size 13px
            outline none


    &__panel
        text-align right
        padding 20px
        background-color: $gray.white


