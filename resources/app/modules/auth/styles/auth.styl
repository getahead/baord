.auth
    $labelRadius = 5px
    $inputHeight = 36px

    min-height 100%
    height 100%


    &__wrapper
        position relative
        max-width 480px

        margin 0 auto
        padding 20px


    &__label
        display block
        padding 10px


        &_center
            text-align center


        &-icon
            position absolute
            width 28px
            height $inputHeight

            background-color: $gray.light
            border: 1px solid $gray.middle

            border-top-left-radius $labelRadius
            border-bottom-left-radius $labelRadius

            font-size 12px
            color: $gray.dark
            line-height ($inputHeight - 2)px
            text-align center


        &-text
            float right
            width 50%

            padding-left 10px
            line-height $inputHeight

            @media (max-width 480px)
                float none
                width auto

                padding 0


        &-field
            float left
            width 50%

            @media (max-width 480px)
                float none
                width auto


    &__header
        font-size 26px
        font-weight 300
        text-align center


    &__input
        height $inputHeight
        width 100%

        padding 8px 5px 8px 35px
        border: 1px solid $gray.middle
        border-radius $labelRadius

        color: $gray.dark
        outline none