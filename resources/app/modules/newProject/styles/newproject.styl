.newproject
    &__head
        padding 20px
        color: $gray.dark
        background-color: $gray.white

        &-header
            font-weight 300
            font-size 22px
            text-align center

            margin 0
            padding 0


        &-project
            color: $colors.black


    &__main
        padding 30px 20px


    &__form
        &-item
            display block
            padding 5px 0


        &-input
            width 30%
            height 30px
            padding 5px
            border-radius 3px
            border: 1px solid $gray.middle

            font-size 13px
            outline none


        &-textarea
            width 100%
            height 100px
            border-radius 3px
            border: 1px solid $gray.middle
            padding 5px

            font-size 13px
            outline none


    &__panel
        text-align right
        padding 20px
        background-color: $gray.white


