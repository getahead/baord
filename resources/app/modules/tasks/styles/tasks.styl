.tasks
    display table
    table-layout fixed
    width 100%


    &__row
        display table-row


    &__col
        display table-cell

        background: $gray.white
        border: 5px solid $colors.white

        &:first-child
            border-left 0

        &:last-child
            border-right 0


    &__thead
        padding 20px 0
        background: $gray.light

        text-transform capitalize
        text-align center
        font-weight 400
        font-size 14px




    &__item
        display block
        height 100px
        padding 5px
        margin 10px 0

        background-color: $blue.light


        &_dragged
            opacity 0.1


        &_avatar
            position absolute
            z-index 1

            opacity 0.5
            cursor move




