.language-switcher
    $size = 20px

    position relative
    size 100% $size
    margin 24px 10px 0 0

    overflow hidden

    line-height $size
    cursor pointer


    &:hover
        position absolute
        overflow auto
        height auto


    &__item
        border-radius 50%
        size $size

        margin 0 0 10px
        background-size cover
        opacity 0.6


        &:hover
            box-shadow 0 0 2px rgba(0, 0, 0, 0.5)
            opacity 1


        &_ru
            background-image url('data:image/svg+xml;base64,')


        &_en
            background-image url('data:image/svg+xml;base64,')