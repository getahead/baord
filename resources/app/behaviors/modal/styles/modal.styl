.modal
    position absolute

    top 0
    bottom 0
    left 0
    right 0


    &__overlay
        position fixed
        z-index 1

        top 0
        bottom 0
        left 0
        right 0

        background rgba(0, 0, 0, 0.3)


    &__container
        position relative
        z-index 2

        max-width 820px
        margin 5% auto

        background: $colors.white
        box-shadow 0 0 10px 1px rgba(102, 102, 102, 0.8)



